        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="19" Margin="202,127,0,0" VerticalAlignment="Top" Width="107" Password="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="button2" Content="连接数据库" HorizontalAlignment="Left" Margin="155,155,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click"/>
        <Button x:Name="button" Content="关于" HorizontalAlignment="Left" Margin="214,187,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="61,191,0,0" TextWrapping="Wrap" Text="本机IP:" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="110,191,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top"/>
        

    </Grid>
